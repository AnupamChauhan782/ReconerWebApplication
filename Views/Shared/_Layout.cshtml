

 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReCornerApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReCornerApplication.styles.css" asp-append-version="true" />
    <style>
        body {
            overflow-x: hidden;
        }
        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            transition: all 0.3s;
        }
        .sidebar .nav-link {
            color: #333;
            padding: 10px 20px;
            margin: 5px 0;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover {
            background-color: #e9ecef;
            border-radius: 5px;
        }
        .sidebar .nav-link i {
            margin-right: 10px;
        }
        .content {
            margin-left: 248px;
            
            transition: all 0.3s;
        }

        #searchInput{
            border-radius:20px;width:700px;
        }
        .navbar {
            z-index: 1000;
        }
        .footer {
            margin-left: 250px;
            transition: all 0.3s;
        }
       
    </style>
</head>
<body>
    <div class="sidebar shadow">
        <div class="text-center mb-4">
            <h3>ReCorner <i class="bi bi-cart3"></i></h3>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Student</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Teachers" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Teacher</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Index"><i class="bi bi-book-half"></i> Book</a>
            </li>
        </ul>
    </div>

    <div class="content">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow shadow m">
                <div class="container-fluid">
                    <button id="sidebarToggle" class="btn btn-outline-secondary d-md-none mr-auto mr-2">
                        <i class="bi bi-list"></i>
                    </button>
                    <input type="search" placeholder="Search teacher..." id="searchInput" class="form-control" />
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted shadow">
        <div class="container text-center">
            &copy; 2024 - ReCornerApplication - <i class="bi bi-suit-heart-fill" style="color:red"></i>  <i class="bi bi-emoji-heart-eyes" style="color:red"></i>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
            document.querySelector('.content').classList.toggle('active');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>