@model ModelData.ViewModel.BookViewModel;

<style>
    body {
        background-color: #f0f0f0;
        font-family: 'Arial', sans-serif;
    }

    .book-form {
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .book-form:hover {
            transform: scale(1.02);
            box-shadow: 0 0 30px rgba(0,0,0,0.2);
        }

    .form-header {
        background: linear-gradient(45deg, #3498db, #8e44ad);
        color: white;
        padding: 20px;
        text-align: center;
    }

    .form-body {
        padding: 30px;
    }

    .form-control {
        border: none;
        border-bottom: 2px solid #3498db;
        border-radius: 0;
        padding: 10px 5px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #8e44ad;
        }

    .btn-submit {
        background: linear-gradient(45deg, #3498db, #8e44ad);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    .image-preview {
        width: 100%;
        height: 200px;
        border: 2px dashed #3498db;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        color: #777;
        margin-bottom: 20px;
    }
</style>



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Delete" method="post" class="book-form" enctype="multipart/form-data">
                <input type="hidden" asp-for="BookId" />
                @Html.AntiForgeryToken()
                <div class="form-header">
                    <h2>Add New Book</h2>
                </div>
                <div class="form-body">
                    <div class="mb-3">
                        <label asp-for="BookName" class="form-label">Book Name</label>
                        <input asp-for="BookName" disabled class="form-control" placeholder="Enter book name">
                        <span asp-validation-for="BookName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AuthorName" class="form-label">Author Name</label>
                        <input asp-for="AuthorName" disabled class="form-control" placeholder="Enter author name">
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" disabled class="form-control" placeholder="Enter price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Book Cover</label>
                        <input asp-for="Image" disabled class="form-control" type="file" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-submit">Delete <i class="bi bi-trash3"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>