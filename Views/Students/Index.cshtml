@model IEnumerable<ModelData.Models.Student>

<style>
    /* Your existing styles remain unchanged */
    .custom-shadow {
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: all 0.3s;
        border-radius: 20px;
    }

    .btn-floating {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 24px;
        line-height: 60px;
        padding: 0;
        z-index: 1000;
    }

    .form-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        overflow: hidden;
    }

        .form-container .card {
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
        }

    .search-container {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5">
    <!-- Search Bar and Button -->
    <div class="search-container custom-shadow mb-4">
        <div class="row align-items-center">
            <div class="col-md-8 mb-3 mb-md-0">
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white"><i class="bi bi-search"></i></span>
                    <input type="text" id="localSearchInput" class="form-control" placeholder="Search users...">
                </div>
            </div>
            <div class="col-md-4 text-md-end">
                <a class="btn btn-success" asp-action="Create" asp-controller="Students">
                    <i class="bi bi-plus-circle"></i> Add New User
                </a>
            </div>
        </div>
    </div>

    <!-- Eye-catching Table -->
    <div class="card custom-shadow">
        <div class="card-body">
            <h4 class="card-title text-secondary text-center mb-4"><strong>Student Management</strong> <i class="bi bi-person-lines-fill"></i></h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="studentTable">
                    <thead class="table">
                        <tr>
                            <th scope="col">StudName</th>
                            <th scope="col">Address</th>
                            <th scope="col">EmailId</th>
                            <th scope="col">Contact</th>
                            <th scope="col">Dob</th>
                            <th scope="col">Section</th>
                            <th scope="col">Stream</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <th scope="row">@items.Name</th>
                                <td>@items.Address</td>
                                <td>@items.EmailAddress</td>
                                <td>@items.Contact</td>
                                <td>@items.DOB</td>
                                <td>@items.Section</td>
                                <td><span class="badge bg-success">@items.Stream</span></td>
                                <td>
                                    <a class="btn btn-sm btn-outline-primary me-1" asp-route-id="@items.StudId" asp-action="Delete" asp-controller="Students"><i class="bi bi-trash3"></i></a>
                                    <a class="btn btn-sm btn-outline-danger" asp-route-id="@items.StudId" asp-action="Edit" asp-controller="Students"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#localSearchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#studentTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}